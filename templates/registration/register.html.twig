{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_errors(registrationForm ) }}

    {{ form_start(registrationForm , {'attr': {'class': 'register'}}) }}
        {{ form_widget(registrationForm.username, {'attr' :{'placeholder' : 'Pseudo', 'arial-label' : 'Entrez votre Pseudo'}}) }}
        {{ form_widget(registrationForm.plainPassword, {
           'attr' : {'placeholder': 'Mot de passe', 'arial-label' : 'Entrez votre mot de passe'}
        }) }}
        {{ form_row(registrationForm.agreeTerms, {'arial-label' : 'Acceptez vous les termes ? '}) }}

        <button type="submit" class="btn-form" arial-label="Bouton d'inscription">Je m'inscris</button>
    {{ form_end(registrationForm) }}
{% endblock %}
